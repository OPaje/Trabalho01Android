<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Matriz2">

    <TextView
        android:id="@+id/et_opcao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3) Adcionar uma constante"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_opcao2"
        app:layout_constraintVertical_bias="0.17" />

    <TextView
        android:id="@+id/et_opcao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Subtrair Matrizes"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_opcao1"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/titulo_matriz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matriz 2x2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/btn_resultado_matriz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Resultado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_opcao_matriz2"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/et_opcao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1) Somar Matrizes"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_matriz2"
        app:layout_constraintVertical_bias="0.113" />

    <Button
        android:id="@+id/btn_proximo_matriz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximo Ex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_resultado_matriz2"
        app:layout_constraintVertical_bias="0.611" />

    <EditText
        android:id="@+id/et_opcao_matriz2"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Informe sua opção aqui"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_opcao3"
        app:layout_constraintVertical_bias="0.191" />

    <Button
        android:id="@+id/btn_menu_matriz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_resultado_matriz2"
        app:layout_constraintVertical_bias="0.611" />
</androidx.constraintlayout.widget.ConstraintLayout>